<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">
    <changeSet id="createVideoAndTagTables" author="Mykhailo">
        <createTable tableName="video">
            <column name="id" type="varchar(55)">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(55)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="video" type="tinyblob">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="tag">
            <column name="id" type="varchar(55)">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(55)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="video_tag">
            <column name="video_id" type="varchar(55)">
                <constraints nullable="false" foreignKeyName="fk_video_id" referencedTableName="video" referencedColumnNames="id"/>
            </column>
            <column name="tag_id" type="varchar(55)">
                <constraints nullable="false" foreignKeyName="fk_tag_id" referencedTableName="tag" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>